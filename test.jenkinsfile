pipeline {
    agent any
  
    stages {
        stage ('cleanup'){
            steps{
                deleteDir()
                sh 'docker rmi Dockerfile || true'
            }
        }
        stage ('Install dependencies'){
            steps{
                sh 'npm install'
            }
        }
        stage('fetch app code') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }
        stage ('Build artifact'){
            steps{
                docker.build("node-image")
            }
        }
        stage ('Push artifact'){
            steps{
                Image.push("node-image")
            }
        }
        stage ('deployment'){
            steps{
                sh 'docker stop $(docker ps -q)'
                docker {
                    Image.run('arne788/node-image')
                    reuseNode true
                }
            }
        }
        
    }
}
